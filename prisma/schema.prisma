generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id                 Int        @id @default(autoincrement())
  firstName          String
  lastName           String
  studiesBegin       String
  studyProgram       String
  studyPeriod        String
  supervisorId       Int
  lastContact        DateTime
  alias              String
  credits            Int
  subjectCredits     Int
  breadthCredits     Int
  internshipCredits  Int
  methodologyCredits Int
  gpa                Float
  status             String
  commentShort       String
  commentLong        String
  updated            DateTime
  supervisor         Supervisor @relation(fields: [supervisorId], references: [id])

  @@map("student")
}

model Supervisor {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String    @unique
  student   Student[]

  @@map("supervisor")
}

model refreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  username  String
  createdAt DateTime @default(now())
  expiresAt DateTime
}